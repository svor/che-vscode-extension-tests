{
    "compilerOptions": {
        "strict": true,
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "emitDecoratorMetadata": true,
        "downlevelIteration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "lib": [
            "es6",
            "webworker"
        ],
        "sourceMap": true,
        "outDir": "lib",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "rootDirs": [
            "src",
            "tests"
        ],
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "noImplicitThis": false
    },
    "include": [
        "src",
        "tests"
    ]
}
